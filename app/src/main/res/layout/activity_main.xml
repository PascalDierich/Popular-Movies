<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pascaldierich.popularmovies.MainActivity"
    >

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/movie_grid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" /> <!-- android:numColumns="auto_fit" -->

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/movie_grid"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:visibility="visible"
        android:backgroundTint="@android:color/holo_orange_dark"
        tools:targetApi="lollipop" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="25dp"
        android:clickable="true"
        app:fabSize="normal"
        android:id="@+id/settingsActionButton"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/movie_grid"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/movie_grid"
        app:layout_constraintVertical_bias="0.88"
        app:layout_constraintHorizontal_bias="0.89"
        app:backgroundTint="@android:color/holo_orange_dark"
        app:elevation="5dp"
        android:layout_height="25dp"
        tools:ignore="PrivateResource" />

</android.support.constraint.ConstraintLayout>
